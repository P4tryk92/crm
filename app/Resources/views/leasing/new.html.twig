{% extends 'base.html.twig' %}

{% block body %}

{% if edit is defined %}
<h3>Edycja leasingu </h3>
{% else %}
<h3>Dodawanie nowego leasingu </h3>
{% endif %}

<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <!-- Przedmiot leasingu -->
                {{ form_label(form.leasingThing, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.leasingThing, { 'type':'number' }) }}
                <span class="text-danger" id="leasing_leasingThing_error" style="display:none;">Nazwa przedmiotu leasingu musi mieć co najmniej 4 litery.</span>
            </div>
            <div class="form-group">
                <!-- Kwota kredytu -->
                {{ form_label(form.amount, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.amount, { 'type':'number' }) }}
                <span class="text-danger" id="leasing_amount_error" style="display:none;">Kwota kredytu musi być większa od 0.</span>
            </div>
            <div class="form-group">
                <!-- Data udzielenia kredytu -->
                {{ form_label(form.grantingDate, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.grantingDate) }}
                <span class="text-danger" id="leasing_grantingDate_error" style="display:none;">Wpisz poprawną datę w formacie 20.12.2000.</span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <!-- Data spłaty kredytu -->
                {{ form_label(form.repaymentDate, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.repaymentDate) }}
                <span class="text-danger" id="leasing_repaymentDate_error" style="display:none;">Wpisz poprawną datę w formacie 20.12.2000.</span>
            </div>
            <div class="form-group">
                <!-- Miesięczna rata -->
                {{ form_label(form.monthlyInstallment, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.monthlyInstallment, { 'type':'number' }) }}
                <span class="text-danger" id="leasing_monthlyInstallment_error" style="display:none;">Miesięczna rata musi być większa od 0.</span>
            </div>
            <div class="form-group">
                <!-- Nazwa banku -->
                {{ form_label(form.bankName, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.bankName) }}
                <span class="text-danger" id="leasing_bankName_error" style="display:none;">Nazwa banku musi posiadać co najmniej 2 litery.</span>                
            </div>
            <div class="form-group">
                <!-- Submit Button -->
                {{ form_label(form.save, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.save) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block javascripts %}

<script src="{{ asset('../js/global.js') }}"></script>
<script src="{{ asset('../js/newLeasing.js') }}"></script>

{% endblock %}