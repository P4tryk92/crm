{% extends 'base.html.twig' %}

{% block body %}

{% if edit is defined %}
    <h3>Edycja akcji </h3>
{% else %}
    <h3>Dodawanie nowych akcji </h3>
{% endif %}

<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <!-- Nazwa i rodzaj -->
                {{ form_label(form.nameAndType, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.nameAndType) }}
            </div>
            <div class="form-group">
                <!-- Ilość -->
                {{ form_label(form.numberOfSharesHeld, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.numberOfSharesHeld) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <!-- Wartość -->
                {{ form_label(form.value, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.value) }}
            </div>
            <div class="form-group">
                <!-- Submit Button -->
                {{ form_label(form.save, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.save) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block javascripts %}

{% endblock %}