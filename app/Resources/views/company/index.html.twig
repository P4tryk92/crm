{% extends 'base.html.twig' %}

{% block body %} 
<button type="button" class="btn btn-danger btn-sm mb-2"><a class="text-white" href="{{ url('company_new') }}">Dodaj nową firmę</a></button>
    <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
              })
    </script>
    <div class="table-responsive">   
    <table class="table table-striped" style="font-size:12px;">
        <thead>
            <tr>
                <th>Liczba firm<br />({{ companies|length }})</th>
                <th>Id</th>
                <th>Nazwa firmy</th>
                <th>Branża</th>
                <th>NIP</th>
                <th>Numer telefonu</th>
                <th>Roczne zarobki</th>
                <th>Kredyt od</th>
                <th>Wysokość kredytu</th>
                <th>Wysokość raty kredytu</th>
                <th>Bank</th>
                <th>Status</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for company in companies %}
                <tr class="{{company.id}}-row">
                    <th scope="row">{{ loop.index + (page - 1 ) * perPage }}</th>
                    <td>
                        {{company.id}}
                    </td>
                    <td>
                        {{company.companyName}}
                    </td>
                    <td>
                        {{company.industry}}
                    </td>
                    <td>
                        {{company.nip}}
                    </td>
                    <td>
                        {{company.phoneNumber}}
                    </td>
                    <td>
                        {{company.fixedAnnualIncome}}
                    </td>
                    {% set credit = company.credits.last() %}
                    {% if credit %}
                        <td>
                            {{ credit.grantingDate|date("d-m-Y") }}
                            {% if company.credits|length > 1 %}
                            <span data-toggle="tooltip" data-placement="top" title="Klient posiada więcej kredytów">
                                    <i class="fas fa-exclamation-circle h5 text-danger ml-2" ></i>
                            </span>
                            {% endif %}
                        </td>
                        <td>
                            {{ credit.amount }}
                        </td>
                        <td>
                            {{ credit.monthlyInstallment }}
                        </td>
                        <td>
                            {{ credit.bankName }}
                        </td>
                        <td>
                            {{company.isActive}}
                        </td>
                    {% else %}
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                    {% endif %}
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-danger btn-sm"><a class="text-white"
                                    href="{{ url('company_edit', {id: company.id}) }}">Edytuj</a></button>
                            <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ url('company_remove', {id: company.id}) }}">Usuń</a>
                                <a class="dropdown-item" href="{{ url('credit_index', {id: company.id, type: 'firma'}) }}">Kredyt</a>
                                <a class="dropdown-item" href="{{ url('leasing_index', {id: company.id}) }}">Leasing</a>
                                <a class="dropdown-item" href="{{ url('shares_index', {id: company.id}) }}">Akcje</a>
                                <a class="dropdown-item" href="{{ url('wealth_by_appraiser_index', {id: company.id}) }}">Majątek wyceniony przez rzeczoznawcę</a>
                            </div> 
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
         
{% endblock %}

{% block stylesheets %}
    
{% endblock %}
