{% extends 'base.html.twig' %}

{% block body %}

{% if edit is defined %}
<h3>Edycja kredytu </h3>
{% else %}
<h3>Dodawanie nowego kredytu </h3>
{% endif %}

<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <!-- Kwota kredytu -->
                {{ form_label(form.amount, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.amount) }}
                <span class="text-danger" id="credit_amount_error" style="display:none;">Kwota kredytu musi być większa od 0.</span>
            </div>
            <div class="form-group">
                <!-- Data udzielenia kredytu -->
                {{ form_label(form.grantingDate, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.grantingDate) }}
                <span class="text-danger" id="credit_grantingDate_error" style="display:none;">Wpisz poprawną datę w formacie 20.12.2000.</span>
            </div>
            <div class="form-group">
                <!-- Data spłaty kredytu -->
                {{ form_label(form.repaymentDate, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.repaymentDate) }}
                <span class="text-danger" id="credit_repaymentDate_error" style="display:none;">Wpisz poprawną datę w formacie 20.12.2000.</span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <!-- Miesięczna rata -->
                {{ form_label(form.monthlyInstallment, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.monthlyInstallment) }}
                <span class="text-danger" id="credit_monthlyInstallment_error" style="display:none;">Miesięczna rata musi być większa od 0.</span>
            </div>
            <div class="form-group">
                <!-- Nazwa banku -->
                {{ form_label(form.bankName, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.bankName) }}
                <span class="text-danger" id="credit_bankName_error" style="display:none;">Nazwa banku musi posiadać co najmniej 2 litery.</span>                
            </div>
            <div class="form-group">
                <!-- Wysokość marży kredytu -->
                {{ form_label(form.profitMargin, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.profitMargin) }}
                <span class="text-danger" id="credit_profitMargin_error" style="display:none;">Wysokość marży nie może być liczbą ujemną.</span>
            </div>
            <div class="form-group">
                <!-- Submit Button -->
                {{ form_label(form.save, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.save) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block javascripts %}

<script src="{{ asset('../js/global.js') }}"></script>
<script src="{{ asset('../js/newCredit.js') }}"></script>

{% endblock %}